<div class="row">
  <div class="col-md-6">
    <%= form_for(@user, html: {class: 'from'}) do |f| %>

      <% if @user.errors.any? %>
        <div id="error_explanation">
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="input-control">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: 'form-control', autofocus: true %>
      </div>

      <div class="input-control">
        <%= f.label :cpf %><br>
        <%= f.text_field :cpf, class: 'form-control'%>
      </div>

      <div class="input-control">
        <%= f.label :rg %><br>
        <%= f.text_field :rg, class: 'form-control'%>
      </div>

      <div class="input-control">
        <%= f.label :email %><br>
        <%= f.text_field :email, class: 'form-control'%>
      </div>

      <div class="input-control">
        <%= f.label :birthday %><br>
        <%= f.date_select :birthday, rows: 5, class: 'form-control' %>
      </div>

      <div class="input-control">
        <%= f.label :shift %><br>
        <%= f.collection_select :shift_id, Shift.all, :id, :name, {prompt: true},  {class: 'form-control'} %>
      </div>

      <div class="input-control">
        <%= f.label :user_group %><br>
        <%= f.collection_select :user_group_id, UserGroup.all, :id, :name, {prompt: true},  {class: 'form-control'} %>
      </div>

      <div class="input-control">
        <%= f.label :card %><br>
        <%= f.text_field :card, class: 'form-control'%>
      </div>

      <div class="input-control">
        <%= f.label :password %><br>
        <%= f.text_field :password, class: 'form-control'%>
      </div>
      
    <% end %>
  </div>
</div>

</br>

<script type="text/javascript">
  $("#save").click(function(){
    $("form:first").submit();
  });
</script>
