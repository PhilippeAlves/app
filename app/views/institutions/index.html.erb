<div class="container">
        
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#"><%= t('model.institution') %></a>
        <ul class="nav navbar-nav brand">
          <li><%= link_to t('action.new'), new_institution_path %></li>
        </ul>
      </div>
    </div>
  </nav>


  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('head.name') %></th>
        <th><%= t('head.description') %></th>
        <th><%= t('head.actions') %></th>
      </tr>
    </thead>

    <tbody>
      <% @institutions.each do |institution| %>
        <tr>
          <td><%= institution.name %></td>
          <td><%= institution.description %></td>
          <td class="link-controls">
            <%= link_to institution do %>
              <span class="glyphicon glyphicon-list-alt" title="<%= t('tip.show') %>"></span>
            <% end %>

            <%= link_to edit_institution_path(institution) do %>
              <span class="glyphicon glyphicon-edit" title="<%= t('tip.edit') %>"></span>
            <% end %>

            <%= link_to "#institution-#{institution.id}", :'data-toggle' => 'modal' do %>
              <span class="glyphicon glyphicon-trash" title="<%= t('tip.destroy') %>"></span>
            <% end %>
            <%= render 'modal', institution: institution %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>