<div class="container">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#"><%= t('model.department') %></a>
        <ul class="nav navbar-nav brand">
          <li><%= link_to t('action.edit'), edit_department_path(@department) %></li>
