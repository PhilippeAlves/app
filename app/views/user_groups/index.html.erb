<div class="container">

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#"><%= t('model.user_group') %></a>
        <ul class="nav navbar-nav brand">
          <li><%= link_to t('action.new'), new_user_group_path %></li>
        </ul>
      </div>
    </div>
  </nav>

  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('head.name') %></th>
        <th><%= t('head.description') %></th>
        <th><%= t('head.actions') %></th>
      </tr>
    </thead>

    <tbody>
      <% @user_groups.each do |user_group| %>
        <tr>
          <td><%= user_group.name %></td>
          <td><%= user_group.description %></td>
          <td class="link-controls">
            <%= link_to user_group do %>
              <span class="glyphicon glyphicon-list-alt" title="<%= t('tip.show') %>"></span>
            <% end %>
            <%= link_to edit_user_group_path(user_group) do %>
              <span class="glyphicon glyphicon-edit" title="<%= t('tip.edit') %>"></span>
            <% end %>
            <%= link_to "#user_group-#{user_group.id}", :'data-toggle' => 'modal' do %>
              <span class="glyphicon glyphicon-trash" title="<%= t('tip.destroy') %>"></span>
            <% end %>
            <%= render 'modal', user_group: user_group %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
