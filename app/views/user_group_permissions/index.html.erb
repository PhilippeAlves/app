<div class="container">

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#"><%= t('model.user_group_permission') %></a>
        <ul class="nav navbar-nav brand">
          <li><%= link_to t('action.back'), permissions_path %></li>
        </ul>
        <%= render 'form' %>
      </div>
    </div>
  </nav>

  <% unless flash[:success].nil? %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <strong><%= flash[:success] %></strong>
    </div>
  <% end %>

  <% unless flash[:error].nil? %>
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <strong><%= flash[:error] %></strong>
    </div>
  <% end %>

  <% unless flash[:info].nil? %>
    <div class="alert alert-info">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <strong><%= flash[:info] %></strong>
    </div>
  <% end %>

  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('head.user_group') %></th>
        <th><%= t('head.permission') %></th>
        <th><%= t('head.actions') %></th>
      </tr>
    </thead>

    <tbody>
      <% @user_group_permissions.each do |user_group_permission| %>
        <tr>
          <td><%= user_group_permission.user_group.name %></td>
          <td><%= user_group_permission.permission.name %></td>
          <td class="link-controls">
            <%= link_to "#user_group_permission-#{user_group_permission.id}", :'data-toggle' => 'modal' do %>
              <span class="glyphicon glyphicon-trash" title="<%= t('tip.destroy') %>"></span>
            <% end %>
            <%= render 'modal', user_group_permission: user_group_permission %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
