<p id="notice"><%= notice %></p>

<h1>Listing User Group Permissions</h1>

<table>
  <thead>
    <tr>
      <th>User group</th>
      <th>Permission</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_group_permissions.each do |user_group_permission| %>
      <tr>
        <td><%= user_group_permission.user_group %></td>
        <td><%= user_group_permission.permission %></td>
        <td><%= link_to 'Show', user_group_permission %></td>
        <td><%= link_to 'Edit', edit_user_group_permission_path(user_group_permission) %></td>
        <td><%= link_to 'Destroy', user_group_permission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

