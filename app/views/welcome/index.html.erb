<div class="container">
  <br><br>
  <div class="row">
    <div class="col-md-4">
      <% unless flash[:error].nil? %>
        <div class="alert alert-danger">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <h3><%= flash[:error] %></h3>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Acesso restrito</h3>
          </div>
          <div class="panel-body">
            <%= form_for :admin, url: create_session_path, method: 'post' do |f| %>
              <div class="input-control">
                <%= f.label :email %>
                <%= f.text_field :email, class: 'form-control', autofocus: true, autocomplete: 'off' %>
              </div>

              <div class="input-control">
                <%= f.label :password %>
                <%= f.password_field :password, class: 'form-control' %>
              </div>

              <div class="input-control">
                <br>
                <%= f.submit 'Entrar', class: 'btn btn-default' %>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>

