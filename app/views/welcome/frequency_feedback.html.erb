<div class="container">
  <div class="row">
    <% if @user_frequency.nil? %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h1 class="center">Cartão não reconhecido!</h1>
        <h3 class="center">Tente novamente...</h3>
      </div>
    <% end %>

    <% unless @user_frequency.nil? %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h1 class="center">Cartão reconhecido!</h1>
        <h3 class="center"><%= @user_frequency.user.name %></h3>
        <h3 class="center">
          <%= format_date_br @user_frequency.date %>
          às
          <%= format_time @user_frequency.date %>
        </h3>
      </div>
    <% end %>
  </div>
</div>


<script type="text/javascript">
  setTimeout("location.href='/register/frequency'", 2500);
</script>